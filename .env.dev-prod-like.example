# Development Environment - Production-like Configuration
# Copy this file to .env when using docker-compose.dev-prod-like.yml
#
# This mimics production environment (admin.epochtimes.com)

# ============= CMS Configuration =============
CMS_TYPE=wordpress
CMS_BASE_URL=http://localhost:8001

# HTTP Basic Auth (first layer - same as production)
CMS_HTTP_AUTH_USERNAME=djy
CMS_HTTP_AUTH_PASSWORD=djy2013

# WordPress credentials (second layer)
CMS_USERNAME=admin
CMS_APPLICATION_PASSWORD=admin

# Alternative: Use test editor account
# CMS_USERNAME=ping.xie
# CMS_APPLICATION_PASSWORD=test_password

# ============= PROD_* Variables (for test scripts) =============
PROD_WORDPRESS_URL=http://localhost:8001
PROD_LOGIN_URL=http://localhost:8001/wp-login.php
PROD_FIRST_LAYER_USERNAME=djy
PROD_FIRST_LAYER_PASSWORD=djy2013
PROD_USERNAME=admin
PROD_PASSWORD=admin

# ============= Database =============
DATABASE_URL=postgresql://cms_user:cms_pass@localhost:5432/cms_automation

# ============= Redis =============
REDIS_URL=redis://localhost:6379/0

# ============= API Keys =============
ANTHROPIC_API_KEY=your-api-key-here

# ============= Google Drive =============
GOOGLE_DRIVE_CREDENTIALS_PATH=/app/credentials/google-drive-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here

# ============= Security =============
SECRET_KEY=your-secret-key-here
ENVIRONMENT=development
