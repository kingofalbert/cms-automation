# ================================
# Frontend Production Environment Configuration
# ================================
# Copy this file to .env.production for production builds
# ================================

# ================================
# API Configuration
# ================================
# Production backend API base URL
VITE_API_URL=https://api.your-production-domain.com

# Production WebSocket URL
VITE_WS_URL=wss://api.your-production-domain.com/ws

# ================================
# Application Settings
# ================================
VITE_APP_TITLE=CMS Automation
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered CMS automation platform

# ================================
# Feature Flags
# ================================
# Disable DevTools in production
VITE_ENABLE_DEVTOOLS=false

# Disable mock data in production
VITE_ENABLE_MOCK_DATA=false

# Disable experimental features in production
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# ================================
# Performance Monitoring
# ================================
# Enable performance monitoring in production
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable error reporting in production
VITE_ENABLE_ERROR_REPORTING=true

# Sentry DSN (if using Sentry for error tracking)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# Polling Configuration
# ================================
# Longer polling intervals for production to reduce server load
VITE_DEFAULT_POLLING_INTERVAL=10000
VITE_TASK_POLLING_INTERVAL=5000

# ================================
# Environment
# ================================
VITE_ENV=production
